<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:text="Harry acordou cedo na manhã seguinte. Embora soubesse que já era dia, continuou com os olhos bem fechados."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            android:fontFamily="serif"
            android:padding="10dp"/>

        <TextView
            android:text="Foi um sonho”, disse a si mesmo com firmeza. “Sonhei que um gigante chamado Rúbeo Hagrid veio me dizer que eu ia para uma escola de magia. Quando abrir os olhos estarei em casa no meu armário."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            android:fontFamily="serif"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/somBatida"
            android:text="De repente ouviu um ruído alto de batidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0056d4"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:padding="10dp"
            android:onClick="" />

        <Button
            android:id="@+id/button2"
            android:text="Próximo"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundbtn"
            android:backgroundTint="#ABABAB"
            android:onClick="callSeconSound"/>
    </LinearLayout>
</ScrollView>
